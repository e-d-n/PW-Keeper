<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/color_Black</item>
        <!--Sets COLOR for the EditText bottom line & Cursor -->
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/color_deepBlue</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/color_Black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/color_lightGray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--ADD THIS TO activity_details.XML to define the toolbar style android:theme="@style/ToolbarTheme" -->
    <!--the line of CODE above tells the ToolBar where to find the style to use -->
    <!--Code below will make the Overflow three dots WHITE and the text of the Action WHITE -->
    <!--Code below add ThemeOverlay.AppCompat.Light sets text to BLACK -->
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <!--The line of CODE below styles the action background color  -->
        <item name="android:itemBackground">@color/color_Red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/color_Black</item>
        <!-- Line of CODE ABOVE can set ActionItem text color WHITE  in Toolbar-->
    </style>

    <style name="Theme"></style>

</resources>
